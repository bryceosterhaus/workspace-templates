{{#sharedContainer}}
prepare:
    - command: [yarn]
      workingDir: {{nameKebabCase}}
    - command: [yarn, build]
      workingDir: {{nameKebabCase}}
{{/sharedContainer}}
assemble:
    {{#sharedContainer}}
    - from: {{ nameKebabCase }}/build/css/styles.css
      into: static/{{ nameKebabCase }}
    - from: {{ nameKebabCase }}/build/index.js
      into: static/{{ nameKebabCase }}
    {{/sharedContainer}}
    {{^sharedContainer}}
    - from: build/css/styles.css
      into: static
    - from: build/index.js
      into: static
    {{/sharedContainer}}
{{ nameKebabCase }}:
    cssURLs:
        {{#sharedContainer}}
        - {{ nameKebabCase }}/css/styles.css
        {{/sharedContainer}}
        {{^sharedContainer}}
        - /css/styles.css
        {{/sharedContainer}}
    friendlyURLMapping: {{ nameKebabCase }}
    htmlElementName: {{ nameKebabCase }}
    instanceable: false
    name: {{ name }}
    portletCategoryName: category.client-extensions
    type: customElement
    urls:
        {{#sharedContainer}}
        - {{ nameKebabCase }}/index.js
        {{/sharedContainer}}
        {{^sharedContainer}}
        - index.js
        {{/sharedContainer}}
    useESM: true